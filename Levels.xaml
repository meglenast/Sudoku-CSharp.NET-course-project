<Page x:Class="Sudoku.Levels"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sudoku"
      xmlns:w="clr-namespace:Sudoku"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Levels">

    <Page.CommandBindings>
        <CommandBinding Command="w:CustomCommands.Easy" CanExecute="EasyCommand_CanExecute" Executed="EasyCommand_Executed"/>
        <CommandBinding Command="w:CustomCommands.Medium" CanExecute="MediumCommand_CanExecute" Executed="MediumCommand_Executed"/>
        <CommandBinding Command="w:CustomCommands.Hard" CanExecute="HardCommand_CanExecute" Executed="HardCommand_Executed"/>
    </Page.CommandBindings>

    <Page.Resources>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="100"/>
        </Style>
    </Page.Resources>

    <Grid Background="Lavender">
        <Frame x:Name="LevelsFrame" />
        <StackPanel x:Name="BtnsLevels" Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" Background="Black">
            <TextBlock Text="Choose difficulty..." FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Top" Height="50" Foreground="Lavender"/>
                <!--Buttons for choosing the level of difficulty-->
                <StackPanel VerticalAlignment="Top"  Orientation="Horizontal" Margin="0,60,0,0">
                <Button x:Name="BtnEasyDifficulty"   Content="Easy"     Command="w:CustomCommands.Easy"     Style="{StaticResource ButtonStyle}"/>
                <Button x:Name="BtnMediumDifficulty" Content="Medium"   Command="w:CustomCommands.Medium"   Style="{StaticResource ButtonStyle}"/>
                <Button x:Name="BtnHardDifficulty"   Content="Hard"     Command="w:CustomCommands.Hard"     Style="{StaticResource ButtonStyle}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
